{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}

   <h2>Connexion</h2>
   {% if error %}
     <div class="alert alert-danger">
          {{error.messageKey| trans(error.messageData,'security')}}
     </div>
   {% endif %}
   <div class="container">
       <form action="{{ path('app_user_login') }}" method="post">
            <input type="text" name="_username" required placeholder="Enter your identifiant">
            <input type="password" name="_password" placeholder="Enter your password">

            <button class="btn btn-info">Valider</button>

       </form>
   
   </div>

{% endblock %}